package aula01;

public class exemplo6 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int a = 3;
		int b = 4;
		int c = 7;
		
		if(a++>=b)
			System.out.println(--c);
		else
			System.out.println(c++);

	}

}

