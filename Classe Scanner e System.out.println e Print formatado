package Minhaclasse;

public class atv2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int numero = 10;
		float numero2 = 5.5f;
		String nome = "Ana";
		System.out.println("O número informado é: " + numero); 
		System.out.printf("O meu nome é %s e o meu número2 é: %.2f" , nome, numero2);
				
 
	}

}
