// solicitar quantos alunos tem na sala e imprimir a média. Usando For

package Fundamentos2;

import java.util.Scanner;

public class atv9 {
	public static void main(String[] args) {
		// TODO Auto-generated method stub
				Scanner entrada = new Scanner(System.in);
				int n = 0, x = 1; 
				double notas = 0, media = 0;
				System.out.println("Quantos alunos têm na sala? ");
				n = entrada.nextInt(); 
				for (int c = 1; c <= n; c++) {
					System.out.println("Qual a nota?");
					notas = notas + entrada.nextDouble();
					
}
				media = notas/n;
				System.out.printf("Média: %.2f", media); //print formatado -> só serve para double ou float.  
}
}
