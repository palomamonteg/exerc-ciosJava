import java.util.Scanner;

public class Atividade2 {
	/*Crie um programa que solicite uma senha ao usuário. 
	 * Continue pedindo até que ele insira a senha correta (por exemplo, "1234"). 
	 * Após a senha correta, exiba uma mensagem de sucesso.
	 */
	

	public static void main(String[] args) {
	// TODO Auto-generated method stub
	Scanner teclado = new Scanner(System.in);
	while (true) {
	System.out.println("Digite a sua senha: ");
	int senha = teclado.nextInt(); 
	if (senha == 1234) {
		System.out.println("Login efetuado com sucesso!");
		break;
	} else {
		System.out.println("Ops! Senha incorreta.");
	}
	}
	teclado.close();
	
			
  
 }
}	
