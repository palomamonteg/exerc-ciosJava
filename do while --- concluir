/*Questão 3: Validação de Entradas
Faça um programa que leia e valide as seguintes informações:
a. Nome: maior que 3 caracteres;
b. Idade: entre 0 e 150;
c. Salário: maior que zero;
d. Sexo: 'f' ou 'm';
e. Estado Civil: 's', 'c', 'v', 'd'. */

import java.util.Scanner;

public class Ex06Laço {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        boolean correto = true;

        do {
        System.out.println("Informe o seu nome: ");
        String nome = sc.nextLine().toUpperCase();

        System.out.println("Informe a sua idade: ");
        int idade = sc.nextInt();

        System.out.println("Informe o seu salário: ");
        Double salario = sc.nextDouble();

        System.out.println("Informe o seu sexo (F - Feminino e M - Masculino): ");
        String sexo = sc.nextLine().toUpperCase();

        System.out.println("Informe o seu estado cívil( 's', 'c', 'v', 'd'.): ");
        String estadoCivil = sc.next().toUpperCase();

        do {    
        if (nome.length() <= 3) {
            System.out.println("Erro!Seu nome deve conter mais de 3 caracteres");
        } else {
            System.out.println("Nome validade.");
        }
    } while (correto =)

        if (idade < 0 || idade <= 150) {
            System.out.println("Erro! Digite uma idade entre 0 e 150");
        }
        if (salario < 0) {
            System.out.println("Informe um salário válido!");
        }
        if (sexo.equalsIgnoreCase("F") || sexo.equalsIgnoreCase("M") ) {
            System.out.println("Erro! Informe um valor válido. Sendo 'F' ou 'M'.");
        }

        if (estadoCivil != "S" && estadoCivil != "C" && estadoCivil != "V" || estadoCivil != "D" ) {

        }
        }

        }  
        
        while (correto == false);
        System.out.println("Validado.");

            
        } 

        }
        
    }
    
}
